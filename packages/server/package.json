{
  "name": "@adachi-sakura/nest-shop-server",
  "version": "0.0.1",
  "description": "",
  "author": {
    "name": "结城桜",
    "email": "i@zy.ci"
  },
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "dev": "cross-env NODE_ENV=development nest start --watch",
    "debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start": "cross-env NODE_ENV=production nest start",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@adachi-sakura/nest-shop-common": "workspace:^1.0.0",
    "@adachi-sakura/nest-shop-entity": "workspace:^1.0.0",
    "@elastic/elasticsearch": "^7.15.0",
    "@nestjs/common": "^8.1.1",
    "@nestjs/config": "^1.0.2",
    "@nestjs/core": "^8.1.1",
    "@nestjs/elasticsearch": "^8.0.0",
    "@nestjs/graphql": "^9.0.6",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.1.1",
    "@nestjs/platform-socket.io": "^8.1.1",
    "@nestjs/swagger": "^5.1.0",
    "@nestjs/typeorm": "^8.0.2",
    "@nestjs/websockets": "^8.1.1",
    "@types/jexl": "^2.3.0",
    "apollo-server-express": "^3.5.0",
    "argon2": "^0.28.2",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "decimal.js": "^10.3.1",
    "dotenv": "^10.0.0",
    "graphql": "^15.7.2",
    "graphql-tools": "^8.2.0",
    "helmet": "^4.6.0",
    "ioredis": "^4.28.0",
    "jexl": "^2.3.0",
    "lodash": "^4.17.21",
    "mysql2": "^2.3.2",
    "nanoid": "^3.1.30",
    "nestjs-typeorm-paginate": "^3.1.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.38"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.2",
    "@nestjs/schematics": "^8.0.3",
    "@nestjs/testing": "^8.1.1",
    "@types/express": "^4.17.13",
    "@types/ioredis": "^4.27.7",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "jest": "^27.3.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ]
  }
}
